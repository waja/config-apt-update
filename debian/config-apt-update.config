#!/bin/bash

set -e

action=$1
version=$2

# Source debconf library.
. /usr/share/debconf/confmodule
db_version 2.0 || [ 0 -lt 30 ]

db_input medium config-apt-update/email/configure || true
db_go || true

db_get config-apt-update/email/configure || true
if [ "$RET" = "true" ]; then
   db_input critical config-apt-update/email/addresses || true
   db_go || true
fi

db_input critical config-apt-update/xmlemail/configure || true
db_go || true

db_get config-apt-update/xmlemail/configure || true
if [ "$RET" = "true" ]; then
   db_input critical config-apt-update/xmlemail/addresses || true
   db_go || true
fi
